#:kivy 1.8.0
#:import win kivy.core.window

ScrollView:
    do_scroll_x: False
    size: win.Window.size
    size_hint: None, None
    GridLayout:
        cols: 1
        height: self.minimum_height
        id: cal
        size_hint: None, None
        width: root.width


<Day@ToggleButton>:
    height: self.parent.height
    width: self.height


<Week>:
    height: win.Window.width / len(self.children)
    orientation: 'horizontal'
    size_hint: 1, None
    Label:
        text: str(root.week_num)
    Day
    Day
    Day
    Day
    Day
    Day
    Day
