#:kivy 1.8.0
#:import win kivy.core.window

<Header@BoxLayout>:
    orientation: 'horizontal'
    Label
    Label:
        text: 'Mon'
    Label:
        text: 'Tue'
    Label:
        text: 'Wed'
    Label:
        text: 'Thu'
    Label:
        text: 'Fri'
    Label:
        text: 'Sat'
    Label:
        text: 'Sun'

BoxLayout:
    orientation: 'vertical'
    Header
        size_hint_y: None
        height: 40
    ScrollView:
        do_scroll_x: False
        GridLayout:
            cols: 1
            height: self.minimum_height
            id: cal
            size_hint: None, None
            width: root.width


<Day@ToggleButton>:
    height: self.parent.height
    width: self.height


<Week>:
    height: 40
    orientation: 'horizontal'
    size_hint: 1, None
    Label:
        text: str(root.week_num)
    Day
    Day
    Day
    Day
    Day
    Day
    Day
